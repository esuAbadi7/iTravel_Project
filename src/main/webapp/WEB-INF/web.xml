    </servlet>



    <servlet-mapping>
        <servlet-name>UserProfilServlet</servlet-name>
        <url-pattern>/updatedetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePasswordServlet</servlet-name>
        <url-pattern>/updatepassword</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnhealthyWordServlet</servlet-name>
        <url-pattern>/unhealtyWords</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LikeDisLikeServlet</servlet-name>
        <url-pattern>/likeDisklike</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FollowServlet</servlet-name>
        <url-pattern>/follow</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetTravelerServlet</servlet-name>
        <url-pattern>/getTraveler</url-pattern>
    </servlet-mapping>

