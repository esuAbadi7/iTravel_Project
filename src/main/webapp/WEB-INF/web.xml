    <servlet>
        <servlet-name>DeletePostServlet</servlet-name>
        <servlet-class>com.itravel.controller.DeletePostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.itravel.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfilServlet</servlet-name>
        <servlet-class>com.itravel.controller.UserProfileServlet</servlet-class>
